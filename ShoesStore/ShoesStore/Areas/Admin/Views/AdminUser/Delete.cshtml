@model User
@{
    ViewData["title"] = "User Management";
}

<form asp-action="DeletePost" method="post">
    <input asp-for="Email" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Shoe</h2>
        </div>
        <div class="row">

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Name"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">

                        <input asp-for="Email" class="form-control" disabled />

                    </div>
                    <div class="col-6">
                        <input asp-for="Name" class="form-control" disabled />
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="RegistrationDate"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">

                        <input asp-for="Address" class="form-control" disabled />

                    </div>
                    <div class="col-6">
                        <input asp-for="RegistrationDate" class="form-control" disabled />
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Status"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Phone"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">

                        <input asp-for="Status" value="@(Model.Status == false ? "Inactive" :"Active")" type="text" class="form-control" disabled />

                    </div>
                    <div class="col-6">
                        <input asp-for="Phone" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>



        </div>

    </div>
</form>



@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

