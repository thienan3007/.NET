@model User
@{
    ViewData["title"] = "User Manage";
    Layout = "_Layout";
}

<form asp-action="UpdatePost" method="post">
    <input asp-for="Email" hidden />
    <input asp-for="Password" hidden />
    <input asp-for="RoleId" hidden />

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Shoe</h2>
        </div>
        <div class="row">

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Name"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">

                        <input asp-for="Email" class="form-control"  disabled="disabled"/>

                    </div>
                    <div class="col-6">
                        <input asp-for="Name" class="form-control"  />
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="RegistrationDate"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">

                        <input asp-for="Address" class="form-control"  />

                    </div>
                    <div class="col-6">
                        <input asp-for="RegistrationDate" class="form-control"  disabled="disabled"/>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Status"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Phone"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">

                        <label for="true">Active</label>
                        <input type="radio" name="status" value="true" id="true" asp-for="Status"/>

                        <label for="false">InActive</label>
                        <input type="radio" name="status" value="false" id="false" asp-for="Status"/>
                    </div>
                    <div class="col-6">
                        <input asp-for="Phone" class="form-control"  />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>



        </div>

    </div>
</form>



@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

