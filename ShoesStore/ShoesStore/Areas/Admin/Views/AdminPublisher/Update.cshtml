@model Publisher
@{
    ViewData["title"] = "Publisher";
    Layout = "_Layout";
}
<form asp-action="UpdatePost" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Publisher</h2>
        </div>
        <div class="row">

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Name"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">

                        <input asp-for="Id" class="form-control" disabled />

                    </div>
                    <div class="col-6">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>



        </div>

    </div>
</form>



@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}