@model Shoe

@{
    ViewData["title"] = "Shoe";
    Layout = "_Layout";
}
<form asp-action="DeletePost" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Shoe</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-10">
                        <label asp-for="Image"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-10">
                        <img src="~/images/@Model.Image" alt="@Model.Name" />
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Price"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">

                        <input asp-for="Name" class="form-control" disabled />

                    </div>
                    <div class="col-6">
                        <input asp-for="Price" class="form-control" disabled />
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Publisher"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Category"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">

                        <input asp-for="Publisher" value="@Model.Publisher.Name" class="form-control" disabled />

                    </div>
                    <div class="col-6">
                        <input asp-for="Category" value="@Model.Category.Name" class="form-control" disabled />
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Quantity"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="ShoeLive"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">

                        <input asp-for="Quantity" class="form-control" disabled />

                    </div>
                    <div class="col-6">
                        <input value="@(Model.ShoeLive == true ? "In stock" : "Out of stock")" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>



        </div>

    </div>
</form>



@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}