@model ShoesStore.Models.Shoe

@{
    ViewData["title"] = "Shoe";
    Layout = "_Layout";
}
<form asp-action="UpdatePost" method="post">
    <input asp-for="Id" hidden />
    <input asp-for="Image" hidden />

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Shoe</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-10">
                        <label asp-for="Image"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-10">
                        <img src="~/images/@Model.Image" alt="@Model.Name" />
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Price"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">

                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="col-6">
                        <input asp-for="Price" class="form-control" />
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Publisher"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Category"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">

                        <select asp-for="PublisherId" class="form-control" asp-items="@ViewBag.publisher">
                            @*@foreach (var pub in @ViewBag.publisher)
                                {
                                    <option value="@pub.Id" selected="@(pub.Id == Model.PublisherId ? "selected" : "")">@pub.Name</option>
                                }*@
                        </select>

                    </div>
                    <div class="col-6">
                        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.category">
                            @*@foreach (var cat in @ViewBag.category)
                                {
                                    <option value="@cat.Id" selected="@(cat.Id == Model.CategoryId ? "selected" : "")">@cat.Name</option>
                                }*@
                        </select>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Quantity"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="ShoeLive"></label>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">

                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>

                    </div>
                    <div class="col-6">
                        <input type="radio" asp-for="ShoeLive" name="shoeLive" value="false" id="false" />
                        <label for="false">Out of stock</label>

                        <input type="radio" name="shoeLive" asp-for="ShoeLive" value="true" id="true" />
                        <label for="true">In stock</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>



        </div>

    </div>
</form>



@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}